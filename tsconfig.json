{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2018",
      "es2018.promise"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
